<% form_for @event do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :draft %><br />
    <%= f.check_box :draft %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
